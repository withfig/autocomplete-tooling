{
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib/",
    "rootDir": "src/",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "target": "ES2017"
    },
  },
  "exclude": ["test/", "node_modules/", "lib/", "generate-spec.ts"],
}
