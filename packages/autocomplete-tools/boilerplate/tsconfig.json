{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "*": ["*", "node_modules/@withfig/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@withfig/types/"
    ]
  },
  "include": ["./src/**/*"],
}
